<!-- This page lets the user choose which room to join -->
<html>
	<!-- Configure the head -->
	<%- include('../../partials/head', {title: "Join A Room"}) %>
	<body>
		<!-- Get the navigation bar -->
		<%- include('../../partials/headerSwitch') %>

		<!-- Main content -->
		<main class=main_join>
			<div class="join_box">
				<div class="jbox">
					<!-- Heading -->
					<p>Join a room!</p>
					<div id="join_container">

						<!-- Form to join room -->
						<form id="jform" action="/chat" method="GET" >
							<!-- Drop down box containing the available rooms -->
							<select name="room" class="input" id="join-input" autofocus="on">
								<!-- Get the rooms from the server -->
								<% rooms.forEach(function(room){ %>
									<!-- Add the room to the select -->
									<option value="<%= room.room %>"><%= room.room %></option>
								<% }); %>
							</select>
						</form>

						<!-- Button to join -->
						<div id="join-btn" class="btn">Join</div>

						<!-- Server response message -->
						<p id="msg"></p>
					</div>
				</div>
			</div>
		</main>
	</body>
</html>
